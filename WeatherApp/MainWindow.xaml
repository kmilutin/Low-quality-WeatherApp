        </TextBlock>
            <TextBlock x:Name="NFDetailb" Background="White" Text="{Binding ShortForecast}"
               Grid.Row="1" Grid.Column="1"
               VerticalAlignment="Bottom"
                   TextWrapping="WrapWithOverflow"
                   Margin="5">
        </TextBlock>
        </Grid>


        <Grid x:Name="Box3" Grid.Row="1" Grid.Column="2">
